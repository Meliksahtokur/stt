<AddAnimalScreen>:
    name: 'add_animal'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Yeni Hayvan Ekle"
            left_action_items: [["arrow-left", lambda x: app.root.current = 'home']]
        MDTextField:
            id: isletme_kupesi_field
            hint_text: "İşletme Küpesi"
            required: True
        MDTextField:
            id: devlet_kupesi_field
            hint_text: "Devlet Küpesi"
        MDTextField:
            id: tasma_no_field
            hint_text: "Taşma No"
        MDTextField:
            id: irk_field
            hint_text: "Irk"
        MDTextField:
            id: dogum_tarihi_field
            hint_text: "Doğum Tarihi (YYYY-MM-DD)"
            mode: "rectangle"
            on_focus: if self.focus: app.open_date_picker(self) # Call date picker on focus

        MDRaisedButton:
            text: "Kaydet"
            on_press: root.save_animal()

